<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codeclan.example.adviceapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AdviceChoiceActivity"
            android:parentActivityName=".LauncherActivity" />
        <activity
            android:name=".AnswerActivity"
            android:parentActivityName=".AdviceChoiceActivity" />
        <activity android:name=".LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MarriageAdviceChoiceActivity"
            android:parentActivityName=".LauncherActivity" />
        <activity
            android:name=".BuyAdviceChoiceActivity"
            android:parentActivityName=".LauncherActivity" />
        <activity
            android:name=".CareerAdviceChoiceActivity"
            android:parentActivityName=".LauncherActivity" />
        <activity android:name=".MarriageAnswerActivity"
            android:parentActivityName=".MarriageAdviceChoiceActivity"/>
    </application>

</manifest>